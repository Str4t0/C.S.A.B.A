   animation: spin 1s linear infinite;
   margin: 0 auto 1rem;
 }
 
 @keyframes spin {
   to { transform: rotate(360deg); }
 }
 
 /* ============= Responsive Design ============= */
 @media (max-width: 768px) {
   .header-content {
     flex-direction: column;
     text-align: center;
   }
 
   .header h1 {
     font-size: 1.5rem;
   }
 
   .header-stats {
     width: 100%;
     justify-content: space-around;
   }
 
